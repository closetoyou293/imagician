<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Imagician.App">
	<Application.Resources>
		<ResourceDictionary>
			<Style x:Key="MiddleLabel" TargetType="Label">
				<Setter Property="Text" Value="This Label should be displayed in the middle and take half of the screen." />
				<Setter Property="BackgroundColor" Value="Red" />
				<Setter Property="RelativeLayout.XConstraint" Value="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.25}" />
				<Setter Property="RelativeLayout.YConstraint" Value="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.25}" />
				<Setter Property="RelativeLayout.WidthConstraint" Value="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.5}" />
				<Setter Property="RelativeLayout.HeightConstraint" Value="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.5}" />
			</Style>
		</ResourceDictionary>
		<!-- Application resource dictionary -->
	</Application.Resources>
</Application>